---
import type { ContentUnit } from "../scripts/ContentUnit";
import ContentInfoCard from './ContentInfoCard.astro';

interface Props {
	contents: ContentUnit[];
}

const {contents = {
			id: "template",
			title: "タイトル",
			createdDate: "XXXX/XX/XX",
			images: [],
			content: "記事の内容",
			tags: ["template"],}
		} = Astro.props;
---

<template>
	<template v-for="content of contents">
		<ContentInfoCard v-if="!content.tags.includes('hidden')" :data="content" />
	</template>
</template>

