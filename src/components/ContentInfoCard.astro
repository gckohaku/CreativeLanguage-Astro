---
import type { ContentUnit } from '../scripts/ContentUnit';

interface Props {
	data?: ContentUnit;
}

const {
	data = {
			id: "template",
			title: "タイトル",
			createdDate: "XXXX/XX/XX",
			images: [],
			content: "記事の内容",
			tags: ["template"],
		}
		} = Astro.props;
---

<template>
	<div class="content-card">
		<NuxtLink class="title-link" :to="'/content/' + data.id">{{ data.title }}</NuxtLink>
		<p class="creating-date"><span class="material-symbols-outlined">calendar_month</span>{{ data.creatingDate }}</p>
		<div class="content-tags">
			<TagsArea :tags="data.tags" />
		</div>
	</div>
</template>

<style scoped lang="scss">
.content-card {
	margin-block-end: 1rem;
	border: #2070a0 2px solid;
	border-radius: 10px;
	padding: .5rem;
	background-color: #f0f8ff;

	.title-link {
		font-weight: bold;
		color: #3050a0;
		font-size: 1.25rem;
	}

	.creating-date {
		display: flex;
		justify-content: baseline;
		color: #505050;

		span {
			font-size: 20px;
		}
	}

	.content-tags {
		span {
			padding-inline-end: 0.5rem;

			&::before {
				content: '#';
			}
		}
	}
}
</style>